lightred = rgb(243, 113, 106)
lightg = #F4F4F4
actgreen = #75E375
lightgreen = #2ECC71
mild = #FFFF5B
warnred = #FFDBDB

body
	padding 0
	margin 0
	font-family 'Open Sans'
	overflow-x hidden

a
	color inherit

.inner
	display table-cell
	vertical-align middle

.header
	display table
	height 100vh
	width 100%
	color lightred
	position relative

.sub
	font-family 'Open Sans'
	text-align center
	font-weight 300
	font-size 50px
	color white
	position absolute
	bottom 25px
	width 100%

.holdNav
	width 40%
	position absolute
	padding 8px
	left 30%
	right 30%

#topNav
	border-bottom 1px solid lightred
	top 15px

#bottomNav
	border-top 1px solid lightred
	bottom 15px

.nav
	width 25%
	text-align center
	color lightred
	font-weight 700
	font-size 17px
	float left

.top
	top 10px
	text-align middle
	width 100%
	position absolute

.titleHolder
	display table-cell
	vertical-align middle
	text-align center

.title
	height 100px
	margin-bottom 30px
	background url('/img/Logo.png') center no-repeat;
	background-size contain


.begin
	padding 9px 27px
	border-radius 2px
	font-weight 700
	font-family 'Open Sans'
	text-transform uppercase
	display inline-block
	color lightred
	cursor pointer
	border 1px solid lightred


.begin:hover {
	color white
	background lightred
}

.topBar {
	height 44px
	background white
	color lightred
	margin-bottom 20px
	font-weight 700
	position fixed
	right 0px
}

#profPic {
	float right
	margin-right 20px
	border-radius 100%
	height:100%
}

#lo {
	background: url("/img/Logo.png") center no-repeat;
	height: 100%;
	width: 100px;
	background-size: contain;
}

.pic
	padding:5px;
	height:100%;

.logo {
	position fixed
	left 0px
	top 15px
	bottom 0
	height 46px
	display inline-block
	font-family 'Pacifico'
	font-size 25px
	margin-left 25px
	font-weight 700
	display table
}

.newHolder {
	width 700px
	margin 0 auto
	background lightg
	position relative
	margin-bottom 40px
	margin-top 15px
}

.newTop {
	padding:11px 20px
	margin-right: 200px
	border-right 1px solid lightg
	font-family 'Open Sans'
	border-right none
	border-radius 5px 0 0 5px
	border-bottom 3px solid #e1e1e1

}

input {
	width 100%
	border none
	background transparent
	outline none
	font-size 17px
}

#task {
	color: #404040;
	font-weight: 700;
}

#dateHolder
	position: absolute;
	top: 0;
	bottom: 0;
	right: 100;
	background: white;
	width: 100px;
	cursor pointer
	padding:5px 0;
	border-bottom 3px solid #f1f1f1

#dateAdpt
	height 100%
	width 100%
	display table
	text-align center

#datepicker
	background url("http://daniellytle.github.io/Images/cal.png") center no-repeat
	background-size contain
	display table-cell
	vertical-align middle
	height 100%
	color #777
	font-weight 700
	cursor pointer

#goButton
	cursor pointer
	font-size:100%;
	width 100px
	top: 0;
	bottom: 0;
	right: 0;
	text-align center
	background: lightgreen;
	position: absolute;
	color white
	padding 7px 0
	border-bottom 3px solid #29B363
	border-radius 0 5px 5px 0
	transition .2s ease


#goImg
	height 100%
	text-align center
	font-size 31px
	line-height 31px
	font-weight 700

#goButton:hover {
	background actgreen
	border-bottom 2px
}

.name {
	float right
	display table
	height 100%
	margin-right 20px
	color: #777
}

.logout {
	float right
	display table
	height 100%
	margin-right 20px
	border: 1px solid lightred;
	border-radius: 3px;
	padding 0 11px
	transition .2s ease
}

.logout:hover {
	background lightred
	color white
}

.todH
	width:70%;
	margin 0 auto
	max-width 1100px
	display table

.check
	position: absolute;
	top: 0;
	left: 100%;
	width: 100px;
	height: 43px;
	text-align center
	background lightgreen

.todos
	-webkit-column-count: 3;
	-webkit-column-fill: auto;
	-moz-column-count: 3;
	-moz-column-fill: auto;
	column-count: 3;
	column-fill: auto;
	-moz-column-break-inside:avoid;
	-webkit-column-break-inside:avoid;
	column-break-inside:avoid;

.tOut
	width 90%
	float left
	display: inline-block;
	margin-left 0
	border-radius 2px
	-webkit-column-break-inside: avoid;
	-moz-column-break-inside: avoid;
	column-break-inside: avoid;
	background: -webkit-linear-gradient(45deg, #FFF, #F9F9F9);
	position relative
	-webkit-transition: all .2s ease;
	-moz-transition: all .2s ease;
	-o-transition: all .2s ease;
	transition: all .2s ease;
	margin:0 auto 20px auto
	margin-left 0
	border-bottom: 3px solid #e1e1e1
	background #EDEDED
	cursor pointer

.tOut:hover
	margin-left 10px

.todo
	transition .5s ease
	word-wrap break-word
	font-weight 700
	margin 10px

.hidden
	background red
	display none


.maybe
	color #e1e1e1
	border-color:#e1e1e1

.urgent
	border-color: #D26E6E;
	background: #F4746D;
	color: white;

.mild
	border-color: #DFDF67;
	background: #FFFF6A;
	color: #777;

.fine
	border-color: #27B262;
	background: rgb(46, 204, 113);
	color: white;

.status
	width 40px
	position: absolute;
	right: 0;
	top: 0;
	padding 10px
	text-align center
	font-weight 700


.empty
	background warnred

.bump
	margin-left 20px;
