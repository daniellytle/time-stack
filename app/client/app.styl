lightred = #FF8484
lightg = #F4F4F4
actgreen = #75E375
lightgreen = #2ECC71
mild = #FFFF5B

body
	padding 0
	margin 0
	font-family 'Open Sans'	
	
a 
	color inherit
	
.inner
	display table-cell
	vertical-align middle
	
.header
	display table
	height 650px
	width 100%
	background lightred
	color white
	position relative
	
.top
	top 10px
	text-align middle
	width 100%
	position absolute
	
.titleHolder
	display table-cell
	vertical-align middle
	text-align center
	
.title
	font-size 90px
	line-height 121px
	font-family 'Pacifico'
	
.sub
	text-align center
	font-size 16px
	
.begin
	padding 9px 27px
	border-radius 2px
	font-weight 700
	font-family 'Open Sans'
	text-transform uppercase
	display inline-block
	cursor pointer
	border 1px solid white
	
	
.begin:hover {
	color lightred
	background white
}

// APP

.topBar {
	height 44px
	background white
	color lightred
	margin-bottom 20px
	position fixed
	right 0px
}

#profPic {
	float right
	margin-right 20px
	border-radius 100%
	height:100%
}

#lo {
	background: url("http://daniellytle.github.io/Images/GottaDoLogo.png") center no-repeat;
	height: 100%;
	width: 100px;
	background-size: contain;
}

.pic 
	padding:5px;
	height:100%;

.logo {
	position fixed
	left 0px
	top 15px
	bottom 0
	height 46px
	display inline-block
	font-family 'Pacifico'
	font-size 25px
	margin-left 25px
	font-weight 700
	display table
}
	
.newHolder {
	width 700px
	margin 0 auto
	background lightg
	position relative
	margin-bottom 40px
	border-radius 5px
	margin-top 15px
	border 1px solid
}

.newTop {
	padding:11px 20px
	margin-right: 200px
	border-right 1px solid lightg 
	font-family 'Open Sans'
	border-right none
	border-radius 5px 0 0 5px
}
	
input {
	width 100% 
	border none 
	background transparent 
	outline none 
	font-size 17px
}

#task {
	color: #404040;
	font-weight: 700;
}

#dateHolder
	position: absolute;
	top: 0;
	bottom: 0;
	right: 100;
	background: white;
	width: 100px;
	cursor pointer
	padding:5px 0;
	

#datepicker
	background url("http://daniellytle.github.io/Images/cal.png") center no-repeat
	background-size contain
	height 100%
	color transparent
	cursor pointer

#goButton 
	cursor pointer
	font-size:100%;
	width 100px
	top: 0;
	bottom: 0;
	right: 0;
	text-align center
	background: lightgreen;
	border-radius 0 5px 5px 0
	position: absolute;
	color white
	padding 7px 0

#goImg
	height 100%
	background url("http://daniellytle.github.io/Images/add.png") center no-repeat
	background-size contain

#goButton:hover {
	background actgreen
}

.name {
	float right
	display table
	height 100%
	font-weight 500
	margin-right 20px
	color: #777
}

.logout {
	float right
	display table
	height 100%
	font-weight 500
	margin-right 20px
	border: 1px solid;
	border-radius: 3px;
	padding 0 11px
	transition .2s ease
}

.logout:hover {
	background lightred
	color white
}

.todH
	width:80%;
	margin 0 auto
	max-width 1100px
	display table
	
.todos 
	-webkit-column-count: 3;
	-webkit-column-gap: 10px;
	-webkit-column-fill: auto;
	-moz-column-count: 3;
	-moz-column-gap: 10px;
	-moz-column-fill: auto;
	column-count: 3;
	column-gap: 15px;
	column-fill: auto;

.tOut
	width 90%
	position relative
	display: inline-block;
	-webkit-column-break-inside: avoid;
	-moz-column-break-inside: avoid;
	column-break-inside: avoid;
	padding-bottom: 5px;
	background: -webkit-linear-gradient(45deg, #FFF, #F9F9F9);
	opacity: 1;
	
	-webkit-transition: all .2s ease;
	-moz-transition: all .2s ease;
	-o-transition: all .2s ease;
	transition: all .2s ease;
	padding: 10px;
	margin:0 auto 20px auto
	border-bottom: 4px solid #e1e1e1
	background #EDEDED
	
	
.done 
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	background lightgreen
	opacity 0
	cursor pointer
	padding:5px

.done:hover
	opacity .7
	
.check
	background 

.todo {

	transition .5s ease
	word-wrap break-word
}

.hidden
	background red
	display none

	
.maybe
	color #e1e1e1
	border-color:#e1e1e1
	
.urgent
	border-color lightred

.mild
	border-color mild

.fine
	border-color lightgreen

.status
	width 40px
	height 100%
	background red