head
	link(rel="icon", type="image/png", href="http://daniellytle.github.io/Images/GottaDoIcon.png")
	title GottaDo
	link(rel='stylesheet', href='/css/app.min.css')
	link(rel='stylesheet', href='/css/pikaday.css')
	link(href='http://fonts.googleapis.com/css?family=Pacifico|Open+Sans:300,400,700', rel='stylesheet', type='text/css')

body
	.topBar 
		img(src='#{user.pic}' id='profPic')
		.name 
			.inner #{user.name} 
		a(href='/logout')
			.logout 
				.inner Logout
	.logo 
		.inner#lo

	form.newHolder#f
		.newTop
			input(placeholder='Task')#task
		#dateHolder
			input#datepicker
		#goButton
			#goImg +
	.todH
		.todos
	.hidden

script(type='text/javascript') var data = !{JSON.stringify(user)};;
