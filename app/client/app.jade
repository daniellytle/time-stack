			.logout 
				.inner Logout
		.logo 
			img(src='/img/Icon.png').inner#lo

	form.newHolder#f
		.newTop
			input(placeholder='Task')#task
		#dateHolder
			#dateAdpt
				#datepicker
		#goButton
			#goImg +
	.todH
		.todos

